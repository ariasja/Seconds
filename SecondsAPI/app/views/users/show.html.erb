<% provide(:title, full_name(@user)) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 52 %>
        <%= full_name(@user) %>
      </h1>
        <font color=#009999><%= wrap(@user.bio) %> </font>

    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>

    <% if @user.posts.any? %>
      <h3>Microposts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
</div>