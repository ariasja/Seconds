<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :video_id %> <%= f.number_field :video_id %>
  <div class="field">
    <%= f.text_area :caption, placeholder: "Compose new post..." %>
  </div>

  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>